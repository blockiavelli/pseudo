// Show Available IPs
        function showAvailableIPs() {
            const modal = document.getElementById('ips-modal');
            const ipsList = document.getElementById('ips-list');
            const ipsCount = document.getElementById('ips-count');
            
            // Show modal and show loading state
            modal.style.display = 'block';
            ipsList.textContent = 'Loading IP addresses...';
            ipsCount.textContent = 'Loading...';
            
            // Fetch available IPs
            fetch('/api/available-ips')
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        ipsList.textContent = `Error: ${data.error}`;
                        ipsCount.textContent = 'Error occurred';
                    } else {
                        const ips = data.ips || [];
                        ipsCount.textContent = `Total available IPs: ${data.count || ips.length}`;
                        if (ips.length > 0) {
                            ipsList.textContent = ips.join('\n');
                        } else {
                            ipsList.textContent = 'No available IP addresses found.';
                        }
                    }
                })
                .catch(error => {
                    ipsList.textContent = `Error: ${error.message}`;
                    ipsCount.textContent = 'Error occurred';
                });
        }
        
        // Close IPs Modal
        function closeIpsModal() {
            const modal = document.getElementById('ips-modal');
            modal.style.display = 'none';
        }
        
        // Close modal when clicking outside of it
        window.onclick = function(event) {
            const modal = document.getElementById('ips-modal');
            if (event.target === modal) {
                closeIpsModal();
            }
        }
        
        // Add click handler to Show Available IPs button
        document.addEventListener('DOMContentLoaded', function() {
            const showIpsBtn = document.getElementById('show-available-ips-btn');
            if (showIpsBtn) {
                showIpsBtn.addEventListener('click', showAvailableIPs);
            }
        });
        
