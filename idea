# First, remove the specific Terraform file to remove its resources
        try:
            if os.path.exists(filepath):
                os.remove(filepath)
                print(f"Terraform file {filename} removed")
            else:
                print(f"Terraform file {filename} not found")
                deployment_status[filename] = 'File not found'
                return
        except Exception as e:
            print(f"Error removing Terraform file {filename}: {e}")
            deployment_status[filename] = f'Error removing file: {str(e)}'
            return
        
        # Run terraform plan to see what changes (should show resources to be destroyed)
        plan_result = subprocess.run(
            ['/usr/local/bin/terraform', 'plan'],
            cwd=terraform_dir,
            capture_output=True,
            text=True,
            timeout=300  # 5 minute timeout
        )
        
        if plan_result.returncode != 0:
            deployment_status[filename] = f'Plan failed: {plan_result.stderr}'
            return
        
        # Run terraform apply to apply the changes (destroy the resources)
        apply_result = subprocess.run(
            ['/usr/local/bin/terraform', 'apply', '-auto-approve'],
